<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.URLVinegar"
        tools:targetApi="31">

        <!-- Main Configuration Activity - Launcher Entry -->
        <activity
            android:name=".ui.ConfigActivity"
            android:exported="true"
            android:label="@string/config_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Processing Activity - Handles URL intents -->
        <activity
            android:name=".ui.ProcessingActivity"
            android:exported="true"
            android:theme="@style/Theme.URLVinegar.Dialog"
            android:label="@string/app_name">
            
            <!-- 2.1: Register as browser handler for http/https schemes -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="http" />
                <data android:scheme="https" />
            </intent-filter>

            <!-- 2.1: Register to receive ACTION_SEND with text/plain -->
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>

        <!-- Activity alias for text selection handler: "Apply URL Vinegar" -->
        <activity-alias
            android:name=".ui.ProcessTextActivity"
            android:targetActivity=".ui.ProcessingActivity"
            android:exported="true"
            android:label="@string/apply_url_vinegar">
            <intent-filter>
                <action android:name="android.intent.action.PROCESS_TEXT" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity-alias>

    </application>

</manifest>
